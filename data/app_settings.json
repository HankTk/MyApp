{
  "app": {
    "name": "My Application",
    "version": "1.2.3",
    "environment": "production",
    "debug": false,
    "maintenance_mode": false
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "max_connections": 1000,
    "timeout": 30,
    "cors_enabled": true,
    "allowed_origins": [
      "http://localhost:3000",
      "https://myapp.com"
    ]
  },
  "database": {
    "type": "sqlite",
    "path": "data/app.db",
    "backup_enabled": true,
    "backup_interval": 86400,
    "max_backups": 7
  },
  "security": {
    "session_secret": "your-secret-key-here",
    "password_min_length": 8,
    "password_require_special": true,
    "max_login_attempts": 5,
    "lockout_duration": 900,
    "jwt_expiry": 3600,
    "refresh_token_expiry": 604800
  },
  "features": {
    "file_upload": {
      "enabled": true,
      "max_size": 10485760,
      "allowed_types": ["jpg", "png", "pdf", "txt", "json", "csv"],
      "storage_path": "uploads/"
    },
    "email": {
      "enabled": true,
      "smtp_host": "smtp.gmail.com",
      "smtp_port": 587,
      "smtp_secure": true,
      "from_address": "noreply@myapp.com"
    },
    "logging": {
      "enabled": true,
      "level": "info",
      "file_path": "logs/app.log",
      "max_size": 10485760,
      "max_files": 5
    },
    "caching": {
      "enabled": true,
      "type": "memory",
      "ttl": 3600,
      "max_size": 100
    }
  },
  "ui": {
    "theme": "default",
    "language": "en",
    "timezone": "UTC",
    "date_format": "YYYY-MM-DD",
    "time_format": "24h",
    "pagination": {
      "default_page_size": 20,
      "max_page_size": 100
    },
    "notifications": {
      "position": "top-right",
      "duration": 5000,
      "max_count": 5
    }
  },
  "api": {
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_size": 10
    },
    "versioning": {
      "enabled": true,
      "current_version": "v1",
      "supported_versions": ["v1"]
    },
    "documentation": {
      "enabled": true,
      "path": "/api/docs"
    }
  }
} 